<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/menu"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginResultActivity">
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
       android:weightSum="10">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:elevation="30dp"
          android:padding="10dp"
          android:orientation="horizontal">

         <ImageView
             android:id="@+id/burger_button"
             android:layout_width="50dp"
             android:layout_height="match_parent"
             android:background=" ?attr/selectableItemBackground"
             android:clickable="true"
             android:src="@drawable/hamburger" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="5dp"
             android:textSize="30sp"
             android:text="MyPeng"
             android:textColor="@color/black"
             android:fontFamily="@font/pushster"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="30dp"
             android:background="@drawable/btn_purple"
             android:gravity="center">

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/search_string"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edittext_stroke"
                android:fontFamily="@font/jua"
                android:hint="검색"
                android:textColorHint="@color/black"
                android:textSize="20sp" />
         </LinearLayout>

         <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

         </FrameLayout>
      </LinearLayout>

      <com.google.android.material.appbar.AppBarLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:elevation="10dp">

         <com.google.android.material.tabs.TabLayout
             android:id="@+id/tabs"
             android:layout_width='match_parent'
             android:layout_height="51dp"
             android:background="@android:color/background_light"
             android:elevation="1dp"
             app:tabGravity="fill"
             app:tabMode="fixed"
             app:tabSelectedTextColor="@color/purple_500"
             app:tabTextColor="@color/black"
             />

      </com.google.android.material.appbar.AppBarLayout>

      <FrameLayout
          android:id="@+id/container"
          android:layout_width="420dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:layout_marginTop="4dp"
          app:layout_behavior="@string/appbar_scrolling_view_behavior"
          android:background="@drawable/main_scrollview_stroke">
         <ScrollView
             android:visibility="visible"
             android:id="@+id/scrollView1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/linearLayout"
                >

               <LinearLayout
                  android:id="@+id/linearLayout2"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="@color/mypeng_purple1">
               </LinearLayout>
            </LinearLayout>
         </ScrollView>
         <ScrollView
             android:visibility="invisible"
             android:id="@+id/scrollView2"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/mypeng_purple2">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:padding="5dp"
                   android:orientation="vertical"
                   android:layout_marginTop="5dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="20sp"
                      android:text="제목"
                      android:textColor="@color/black"
                      android:textStyle="bold"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:text="안녕하세요 내용입니다."
                      android:textColor="@color/black"
                      android:textStyle="bold"/>
               </LinearLayout>
            </LinearLayout>

         </ScrollView>
      </FrameLayout>
      <TextView
          android:id="@+id/cnt_index"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:gravity="center"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:gravity="center"
          android:elevation="10dp">
         <ImageView
             android:id="@+id/back_button"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/left"
             android:clickable="true"
             android:background=" ?attr/selectableItemBackground"/>
         <LinearLayout
             android:id="@+id/write_button"
             android:layout_width="200dp"
             android:layout_height="60dp"
             android:gravity="center"
             android:orientation="horizontal"
             android:background="@drawable/btn_purple"
             android:clickable="true"
             android:layout_marginLeft="40dp"
             android:layout_marginRight="40dp"
             android:elevation="5dp"
             >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit"
                android:layout_marginRight="10dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글쓰기"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/jua"/>
         </LinearLayout>
         <ImageView
             android:id="@+id/next_button"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/right"
             android:clickable="true"
             android:background=" ?attr/selectableItemBackground"
             />
      </LinearLayout>
   </LinearLayout>
   <com.google.android.material.navigation.NavigationView
       android:id="@+id/navigation"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="start"
       android:background="@drawable/menu">
      <include layout="@layout/menu"/>
   </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>